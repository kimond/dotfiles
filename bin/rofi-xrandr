#!/bin/bash
# logout dialog

cmd=$(echo -e "Single\nDouble\nTriple\nLaptop" | rofi -width 350 -dmenu -p system:)
case $cmd in
    Single)
        xrandr --output HDMI2 --auto --off
        ;;
    Double)
        xrandr --output HDMI2 --auto --right-of eDP1
        ;;
    Triple)
        ~/.screenlayout/mainsetup.sh
        ;;
    Laptop)
        ~/.screenlayout/laptoponly.sh
        ;;
esac
